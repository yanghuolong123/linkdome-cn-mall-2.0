.bottomcard
  margin-top 30px
  height 100%
  display flex
  flex-direction column
  justify-content space-between
  .handlebutton
    .ivu-icon
      cursor pointer
      &:hover
        color #3a96e8
    display flex
    justify-content space-between
    font-size 20px
    color #9E9E9E
    padding 0 30px
    >div
      margin 0 5px
  .infocard
      position relative
      margin-top 20px
      // overflow hidden
      &:hover
        >span
          display block
      >span
        position absolute
        z-index 3
        width 20px
        display none
        background-color rgba(210,210,210,.1)
        cursor pointer
        top 50%
        transform translateY(-50%)
        &:nth-of-type(2)
          right 0
        &:nth-of-type()
          left 0
      .scrollBody
        display: grid
        text-align center
        grid-auto-flow column
        transition all 600ms cubic-bezier(0.215, 0.61, 0.355, 1)
        grid-gap 1.33%
        .scaleCard
          >div
            min-height 219px
            padding 20px 10px 20px 19px
            .iconBox
              transform scale(1.5) translateX(4px)
              margin-bottom 24px
              margin-top 5px
            .type-name
              font-size 1.25rem!important
            .number-con
              font-size 2.14rem!important
       
.kpi-card-box
  padding 0 8px!important
  overflow hidden
  margin 0 -9px -9px

