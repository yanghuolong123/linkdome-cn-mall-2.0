my-box-card()
  box-shadow:0px 0px 17px 1px rgba(166,167,167,0.28);
  border-radius:6px
.direction-chart-container
    min-height 400px
    my-box-card()
    background rgba(245,245,247,1)
    .chart-container
        >div
            margin 16px 0
        .trend-container
          display grid
          grid-gap 15px
          grid-template-columns minmax(100px,3.9fr) minmax(100px,1fr)
          @media (max-width:768px)
              grid-template-columns minmax(100px,1fr)
              grid-auto-rows auto
              .right-card-box
                grid-template-columns repeat(3,minmax(100px,1fr))
          .right-card-box
            grid-gap 15px
            display grid
            grid-auto-rows 140px
            @media (max-width:576px) {
                grid-template-columns 1fr
            }
            >div
              my-box-card()
              background-color #fff
              display grid
              grid-template-columns 1fr 1.3fr
              align-items center
              padding 1em
              >span
                justify-self center
              .my-icon-box
                width 50px
                height 50px
                justify-content center
                display flex
                align-items center
                border-radius 50%
          .left-chart-box
            my-box-card()
            background-color #fff
    .ranking-container
      my-box-card()
      background-color #fff